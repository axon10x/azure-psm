{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "timestamp": {
      "type": "string",
      "defaultValue": "[utcNow('u')]"
    },
    "vnetPeeringName": {
      "type": "string",
      "metadata": {
        "displayName": "",
        "description": ""
      }
    },
    "resourceGroupNameRemote": {
      "type": "string",
      "metadata": {
        "displayName": "",
        "description": ""
      }
    },
    "vnetNameLocal": {
      "type": "string",
      "metadata": {
        "displayName": "",
        "description": ""
      }
    },
    "vnetNameRemote": {
      "type": "string",
      "metadata": {
        "displayName": "",
        "description": ""
      }
    },
    "vnetAddressSpaceRemote": {
      "type": "string",
      "metadata": {
        "displayName": "",
        "description": ""
      }
    },
    "tags": {
      "type": "object",
      "defaultValue": "[createObject()]"
    }
  },
  "variables": {
    "timeStampTag": {
      "Timestamp": "[parameters('timestamp')]"
    },
    "tags": "[union(parameters('tags'), variables('timeStampTag'))]",
    "vnetIdRemote": "[resourceId(parameters('resourceGroupNameRemote'), 'Microsoft.Network/virtualNetworks', parameters('vnetNameRemote'))]",
    "apiVersionVnetPeerings": "2020-07-01"
  },
  "resources": [
    {
      "type": "Microsoft.Network/virtualNetworks/virtualNetworkPeerings",
      "name": "[concat(parameters('vnetNameLocal'), '/', parameters('vnetPeeringName'))]",
      "apiVersion": "[variables('apiVersionVnetPeerings')]",
      "properties": {
        "remoteVirtualNetwork": {
          "id": "[variables('vnetIdRemote')]"
        },
        "allowVirtualNetworkAccess": true,
        "allowForwardedTraffic": false,
        "allowGatewayTransit": false,
        "useRemoteGateways": false,
        "remoteAddressSpace": {
          "addressPrefixes": [
            "[parameters('vnetAddressSpaceRemote')]"
          ]
        }
      }
    }
  ]
}