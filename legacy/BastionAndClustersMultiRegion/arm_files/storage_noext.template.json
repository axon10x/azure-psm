{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "metadata": {
                "displayName": "Azure region",
                "description": "The Azure region within which to deploy. Examples: 'East US', 'West US', and so on. See https://azure.microsoft.com/regions/."
            }
        },
        "storage_account_name": {
            "type": "string",
            "metadata": {
                "displayName": "Storage Account Name",
                "description": "Name for the Storage Account"
            }
        },
        "external_source_ip": {
            "type": "string",
            "metadata": {
                "displayName": "External source IP to which to grant access",
                "description": "External source IP to which to grant access"
            }
        }
    },
    "variables": {
        "storageApiVersion": "2018-07-01",
        "storageKind": "StorageV2"
    },
    "resources": [
        {
            "type": "Microsoft.Storage/storageAccounts",
            "name": "[parameters('storage_account_name')]",
            "sku": {
                "name": "Standard_LRS",
                "tier": "Standard"
            },
            "kind": "[variables('storageKind')]",
            "apiVersion": "[variables('storageApiVersion')]",
            "location": "[parameters('location')]",
            "tags": {},
            "properties": {
                "accessTier": "Hot",
                "supportsHttpsTrafficOnly": true,
                "networkAcls": {
                    "bypass": "AzureServices,Logging,Metrics",
                    "defaultAction": "Deny"
                },
                "encryption": {
                    "services": {
                        "file": {
                            "enabled": true
                        },
                        "blob": {
                            "enabled": true
                        }
                    },
                    "keySource": "Microsoft.Storage"
                }
            },
            "dependsOn": []
        }
    ]
}